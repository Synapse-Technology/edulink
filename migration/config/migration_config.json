{
  "migration_info": {
    "version": "1.0",
    "description": "Edulink Microservices Migration Configuration",
    "created_at": "2024-01-15T00:00:00Z"
  },
  "source_database": {
    "host": "localhost",
    "port": 5432,
    "database": "edulink_monolith",
    "username": "edulink_user",
    "password": "your_password_here",
    "schema": "public"
  },
  "auth_database": {
    "host": "localhost",
    "port": 5432,
    "database": "edulink_auth",
    "username": "auth_service_user",
    "password": "your_password_here",
    "schema": "auth_service"
  },
  "user_database": {
    "host": "localhost",
    "port": 5432,
    "database": "edulink_user",
    "username": "user_service_user",
    "password": "your_password_here",
    "schema": "user_service"
  },
  "export_settings": {
    "output_directory": "./migration_data",
    "batch_size": 1000,
    "max_file_size_mb": 100,
    "compression": {
      "enabled": true,
      "format": "gzip"
    },
    "tables": {
      "auth_tables": [
        "auth_user",
        "auth_permission",
        "auth_group",
        "auth_user_groups",
        "auth_user_user_permissions",
        "django_admin_log",
        "oauth2_provider_application",
        "oauth2_provider_accesstoken",
        "oauth2_provider_refreshtoken"
      ],
      "user_tables": [
        "user_profile",
        "student_profile",
        "company_profile",
        "institution_profile",
        "user_role",
        "user_connection",
        "user_activity",
        "user_preference",
        "skill",
        "user_skill"
      ]
    },
    "exclude_fields": {
      "auth_user": ["password"],
      "oauth2_provider_accesstoken": ["token"],
      "oauth2_provider_refreshtoken": ["token"]
    }
  },
  "import_settings": {
    "batch_size": 500,
    "dry_run": false,
    "skip_existing": true,
    "validate_data": true,
    "create_indexes": true,
    "update_sequences": true,
    "mapping": {
      "id_mapping_strategy": "uuid_generation",
      "preserve_relationships": true,
      "handle_conflicts": "skip"
    }
  },
  "validation_settings": {
    "enabled": true,
    "tests": {
      "count_validation": true,
      "data_integrity": true,
      "referential_integrity": true,
      "unique_constraints": true,
      "data_types": true,
      "json_fields": true,
      "performance": true
    },
    "sample_size": 100,
    "timeout_seconds": 300
  },
  "backup": {
    "enabled": true,
    "directory": "./backups",
    "retention_days": 30,
    "compression": true,
    "verify_backup": true,
    "backup_before_migration": true,
    "backup_after_migration": true
  },
  "monitoring": {
    "enabled": true,
    "check_interval_seconds": 30,
    "log_level": "INFO",
    "metrics_retention_hours": 24,
    "thresholds": {
      "max_connections": 100,
      "max_active_queries": 50,
      "max_response_time_ms": 5000,
      "max_error_count": 5,
      "max_database_size_gb": 10,
      "max_cpu_percent": 80,
      "max_memory_percent": 80
    }
  },
  "alerts": {
    "email": {
      "enabled": false,
      "smtp_host": "smtp.gmail.com",
      "smtp_port": 587,
      "use_tls": true,
      "username": "your_email@gmail.com",
      "password": "your_app_password",
      "from": "edulink-migration@yourcompany.com",
      "to": [
        "admin@yourcompany.com",
        "devops@yourcompany.com"
      ]
    },
    "webhook": {
      "enabled": false,
      "url": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
      "headers": {
        "Content-Type": "application/json"
      },
      "timeout_seconds": 10
    }
  },
  "services": {
    "auth_service": {
      "enabled": false,
      "base_url": "http://localhost:8001",
      "health_endpoint": "/health",
      "timeout_seconds": 10
    },
    "user_service": {
      "enabled": false,
      "base_url": "http://localhost:8002",
      "health_endpoint": "/health",
      "timeout_seconds": 10
    }
  },
  "rollback": {
    "enabled": true,
    "create_pre_rollback_backup": true,
    "verify_backup_before_rollback": true,
    "stop_services_before_rollback": true,
    "restart_monolith_after_rollback": true
  },
  "security": {
    "encrypt_sensitive_data": true,
    "mask_passwords": true,
    "secure_file_permissions": true,
    "audit_trail": true
  },
  "performance": {
    "parallel_processing": {
      "enabled": true,
      "max_workers": 4
    },
    "connection_pooling": {
      "enabled": true,
      "max_connections": 10,
      "min_connections": 2
    },
    "memory_optimization": {
      "enabled": true,
      "max_memory_mb": 1024,
      "gc_threshold": 1000
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": {
      "enabled": true,
      "path": "./logs/migration.log",
      "max_size_mb": 100,
      "backup_count": 5
    },
    "console": {
      "enabled": true,
      "colored": true
    }
  },
  "testing": {
    "enabled": true,
    "test_data": {
      "create_sample_data": false,
      "sample_size": 100
    },
    "integration_tests": {
      "enabled": true,
      "test_endpoints": true,
      "test_authentication": true,
      "test_authorization": true
    }
  }
}