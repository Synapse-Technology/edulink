# Production Environment Configuration for Edulink
# Copy this file to your production server and update the values

# Django Settings
DJANGO_SETTINGS_MODULE=edulink.config.settings.prod
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=edulink.jhubafrica.com,www.edulink.jhubafrica.com

# Database Configuration
DATABASE_URL=postgresql://edulink_user:secure_password@db:5432/edulink_db
POSTGRES_DB=edulink_db
POSTGRES_USER=edulink_user
POSTGRES_PASSWORD=secure_database_password

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@edulink.jhubafrica.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=Edulink Platform <noreply@edulink.jhubafrica.com>

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Logging
LOG_LEVEL=INFO

# Docker Images (will be set by CI/CD)
BACKEND_IMAGE=your_dockerhub_username/edulink-backend:latest
FRONTEND_IMAGE=your_dockerhub_username/edulink-frontend:latest

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# Feature Flags
ENABLE_ANALYTICS=True
ENABLE_CHATBOT=True
ENABLE_NOTIFICATIONS=True