# Registration Service Environment Configuration
# Copy this file to .env and update the values for your environment

# Django Settings
DJANGO_SETTINGS_MODULE=registration_service.settings.development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=registration_service
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@edulink.co.ke
SERVER_EMAIL=admin@edulink.co.ke

# Kenya API Configuration
CUE_API_URL=https://api.cue.or.ke
CUE_API_KEY=your-cue-api-key
TVETA_API_URL=https://api.tveta.go.ke
TVETA_API_KEY=your-tveta-api-key

# AWS Configuration (for production backups)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BACKUP_BUCKET=edulink-backups

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Feature Flags
ENABLE_AUTO_APPROVAL=True
ENABLE_RISK_ASSESSMENT=True
ENABLE_EMAIL_VERIFICATION=True
ENABLE_DOMAIN_VERIFICATION=True
ENABLE_INSTITUTION_VERIFICATION=True

# Rate Limiting
RATE_LIMIT_ENABLE=True
MAX_REQUESTS_PER_HOUR=100
MAX_REQUESTS_PER_DAY=1000

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Registration Settings
EMAIL_VERIFICATION_EXPIRY_HOURS=24
REQUEST_EXPIRY_DAYS=30
ADMIN_REVIEW_TIMEOUT_DAYS=7
REMINDER_DAYS_BEFORE_EXPIRY=3

# Risk Assessment Thresholds
RISK_LOW_THRESHOLD=30
RISK_MEDIUM_THRESHOLD=60
RISK_HIGH_THRESHOLD=80

# Auto Approval Settings
AUTO_APPROVAL_MAX_RISK_SCORE=20
AUTO_APPROVAL_REQUIRED_VERIFICATIONS=email,domain

# External Service URLs
MAIN_FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3001
API_BASE_URL=http://localhost:8000

# Development Settings
DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS=True

# Testing Settings
TEST_DATABASE_NAME=test_registration_service
TEST_REDIS_URL=redis://localhost:6379/15

# Backup Settings
BACKUP_ENABLED=False
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Performance Settings
DATABASE_CONN_MAX_AGE=600
CACHE_TIMEOUT=300
SESSION_COOKIE_AGE=3600

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=Africa/Nairobi
USE_I18N=True
USE_TZ=True

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/var/www/registration_service/static/
MEDIA_ROOT=/var/www/registration_service/media/

# CORS Settings
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Health Check Settings
HEALTH_CHECK_DISK_USAGE_MAX=90
HEALTH_CHECK_MEMORY_MIN=100

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
COMPLIANCE_MODE=False
DATA_RETENTION_POLICY=standard

# Notification Settings
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# Analytics and Reporting
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token
ENABLE_ANALYTICS=False

# API Documentation
API_TITLE=Registration Service API
API_VERSION=1.0.0
API_DESCRIPTION=API for managing self-service registration requests

# Maintenance Mode
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=The service is currently under maintenance. Please try again later.